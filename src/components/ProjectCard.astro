---
const { title, description, cardImage, replaceImg, link } = Astro.props;

const imgSrc = "assets/"+cardImage;
const replaceImgSrc = "assets/"+replaceImg;
console.log(imgSrc);
---

<div class="flex w-full">
  <div class="flex flex-col md:flex-row rounded-lg">
    <div id="project-image" class="w-full h-56 hover:scale-125 ease-in duration-500  object-cover shadow-sm rounded-sm md:w-96"/>
    <div class="px-1 md:px-12 py-6 space-y-4 flex flex-col justify-start">
        <a target="_blank" href={link}>
            <h5 class="text-xl md:text-2xl 3xl:text-3xl font-medium mb-2 underline underline-offset-4">{title}<i class="ml-2 fa-solid fa-arrow-up-right-from-square"></i></h5>
        </a>
      <p class="text-base md:text-xl mb-4">
        {description}
      </p>
    </div>
  </div>
</div>


<style define:vars={{ old: imgSrc, new: replaceImgSrc}}>

#project-image {
    background-image: url(var(--old));
}

#project-image:hover {
    background-image: url(var(--old));
}

</style>