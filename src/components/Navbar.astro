---
const url = Astro.url.pathname;
var isHome = true
if(url == "/") {
    isHome = true;
} else {
    isHome = false;
}
---
<header>
    <nav class="flex flex-wrap items-center justify-between w-full py-4  px-4 md:px-24 text-lg bg-primary md:bg-secondary text-secondary md:text-primary">
        <div>
            <a class="text-2xl md:text-3xl font-semibold md:font-bold pl-0" href="/">Varsha Reddy</a>
        </div>
        <div class="mobile-hamburger container rotate-180 mr-4 w-10 p-2 visible md:invisible" onclick="menuHandler()">
            <div id="first-line" class="bg-secondary h-[3px] w-10 my-2 transition-all ease-out delay-100"></div>
            <div id="second-line" class="bg-secondary h-[3px] w-6 my-2 transition-all ease-out delay-100"></div>
            <div id="third-line" class="bg-secondary h-[3px] w-10 my-2 transition-all ease-out delay-100"></div>
        </div>
        <div class="hidden w-full md:flex md:items-center md:w-auto" id="menu">
            <ul class="pt-4 text-end md:flex md:justify-between md:pt-0 text-lg text-semibold">
                {
                    isHome ?  
                    <li onclick="menuHandler()">
                        <a class="md:p-4 py-2 block" href="/about">About</a>
                    </li> : 
                    <li onclick="menuHandler()">
                        <a class="md:p-4 py-2 block" href="/">Home</a>
                    </li>
                }
                
                
                <li onclick="menuHandler()">
                    <a class="md:p-4 py-2 block" href="/#projects">Portfolio</a>
                </li>
                <li onclick="menuHandler()">
                    <a class="md:p-4 py-2 block" href="assets/VarshaReddy_Resume.pdf" target="_blank">Resume</a>
                </li>
                <li onclick="menuHandler()">
                    <a class="md:p-4 py-2 block" href="/#footer">Contact</a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<style>
    .first {
        transform: translateY(11px) rotate(45deg);
        transition: all 0.5s ease;
    }
    
    .second {
        opacity: 0;
        transition: all 0.2s ease;
    }

    .third{
        transform: translateY(-11px) rotate(-45deg);
        transition: all 0.5s ease;
    }
</style>

<script is:inline>
    function menuHandler() {
        hamburgerHandler();
        const menu = document.querySelector('#menu');
        menu.classList.toggle('hidden');
    }

    function hamburgerHandler() {
        var firstLine = document.getElementById("first-line");
        var secondLine = document.getElementById("second-line");
        var thirdLine = document.getElementById("third-line");

        firstLine.classList.toggle("first");
        secondLine.classList.toggle("second");
        thirdLine.classList.toggle("third");
    }

</script>